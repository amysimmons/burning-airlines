<div class="main-container">
  <header>
    <h1 class="title"><i class="fa fa-plane"></i> Burning Airlines</h1>
    <nav>
      <a href="" class="nav-link nav-link-home">Home</a>
      <a href="#search" class="nav-link">Search Flights</a>
      <a href="#planes" class="nav-link">Create Plane</a>
      <a href="#flights" class="nav-link">Create Flight</a>
    </nav>
  </header>
  <div id="main"></div>
  <div id="search-results"></div>
</div>
<script id="newPlaneView-template" type="text/x-template">
  <h2>Create Plane</h2> 
  <form> 
    <div>
      <label for="name">Name</label><br> 
      <input id="name" placeholder="Name"></label> 
    </div> 
    <div>
      <label for="rows">Rows</label><br>
      <input type="number" id="rows" max='26' min='1' placeholder="Rows"></input> 
    </div> 
    <div>
      <label for="columns">Columns</label><br>
      <input type="number" id="columns" min='1' placeholder="Columns"></input> 
    </div> 
    </div><br>
      <button id="save-plane">Save</button> 
      <button id="cancel-plane">Cancel</button> 
      <button id="create-plane">Create Plane</button> 
  </form> 
  <div id="show-plane"></div> 
</script>

<script id="newFlightView-template" type="text/x-template">
  <h2>Create Flight</h2> 
  <form> 
    <div>
      <label for="flight_number">Flight number</label><br> 
      <input id="flight_number" placeholder="Flight number"></label> 
    </div> 
    <div>
      <label for="origin">Origin</label><br>
      <input id="origin" placeholder="Origin"></input> 
    </div> 
    <div>
      <label for="destination">Destination</label><br>
      <input id="destination" placeholder="Destination"></input> 
    </div> 
    <div>
      <label for="date">Flight date</label><br>
      <input id="date" type="date"></input> 
    </div> 
    <div>
      <label for="plane_id">Plane name</label><br>
      <select class="choose-plane" id="plane_id"></select>
    </div> 
    <button id="save-flight">Save</button> 
    <button id="cancel-flight">Cancel</button> 
    <button id="create-flight">Create Flight</button> 
  </form> 
  <div id="show-flights"></div> 
</script>


<script id="flightsView-template" type="text/x-underscore-template">
  <h3>All Flights</h3>
  <table>
  <thead class="thead">
    <th>Date</th>
    <th>Flight</th>
    <th>From > To</th>
    <th>Plane</th>
    <th>Seats</th>
  </thead>
</table>
</script>


<script id="flightListView-template" type="text/x-underscore-template">
  <tr>
    <td>{{moment( flight.date ).format( 'MMMM Do, YYYY' )}}</td>
    <td><a id="{{flight.id}}" data-flight-id = {{ flight.id }}>{{flight.flight_number}}</a></td> 
    <td>{{flight.origin}} > {{flight.destination}}</td>
    <td>{{flight.name}}</td> 
    <td>{{seats}}</td>
  </tr>
</script>


<script id="bookingView-template" type="text/x-template"> 
  <h2>Flight information</h2>
  <div id="seatsView"></div>
  <div>
    <label for="user-name">Name</label><br>
    <input name='user_name' id="user_name"></input> 
  </div>
  <div>
    <label for="seatNumber">Seat Number</label><br>
    <input name='seatNumber' id="seatNumber"></input> 
  </div>
    <button id="selectSeat">Book Seat</button> 

</script>

<script id="newSearchView-template" type="text/x-template">
  <h2>Search Flights</h2> 
  <form role="search"> 
    <div>
      <label for="from">From</label><br> 
      <input id="from" :search, params[:search] placeholder="From"></label> 
    </div> 
    <div>
      <label for="to">To</label><br>
      <input id="to" :search, params[:search] placeholder="To"></input> 
    </div><br>
    <button id="create-search">Search</button> 
  </form> 
  <div id="show-search"></div> 
</script>

<script id="searchView-template" type="text/x-underscore-template">
  <h3>Search Results</h3>
  <table>
  <thead class="thead-search">
    <th>Date</th>
    <th>Flight</th>
    <th>From > To</th>
    <th>Plane</th>
  </thead>
</table>
</script>

<script id="searchListView-template" type="text/x-underscore-template">
  <tr>
    <td>{{moment( date ).format( 'MMMM Do, YYYY' )}}</td>
    <td><a id="{{id}}" data-flight-id = {{ id }}>{{flight_number}}</a></td> 
    <td>{{origin}} > {{destination}}</td>
    <td>{{name}}</td> 
  </tr>
</script>

