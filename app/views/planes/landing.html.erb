      <input id="flight-number"></label> 
    </div> 
    <div>
      <label for="origin">Origin:</label><br>
      <input id="origin"></input> 
    </div> 
    <div>
      <label for="destination">Destination:</label><br>
      <input id="destination"></input> 
    </div> 
    <div>
      <label for="date">Flight date:</label><br>
      <input id="date"></input> 
    </div> 
    <div>
      <label for="name">Plane name:</label><br>
      <select class="plane-name"></select>
      <input id="name"></input> 
    </div> 
    <button id="save-flight">Save</button> 
    <button id="cancel-flight">Cancel</button> 
  </form> 
  <div id="show-flights"></div> 
</script>


